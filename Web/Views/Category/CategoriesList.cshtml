@model Web.ViewModels.CategoryListViewModel
@using Web.Helpers
@{
    ViewData["Title"] = "Kategorijų valdymas";
    ViewData["Menu"] = "CategoriesList";
    ViewData["BreadCrumbs"] = new BreadCrumb()
        .Append(SiteCrumbs.Home(Url))
        .Append(SiteCrumbs.CategoryList(Url));
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Kategorijų valdymas</h1>

<div class="align-right margin-min">
    <a class="btn btn-primary" asp-action="OpenCreationForm" asp-controller="Category"><span class="fas fa-plus" /> <span>Kurti</span></a>
</div>
<table class="table borderless">
    <tr>
        <th>#</th>
        <th>Pavadinimas</th>
        <th></th>
    </tr>

    @foreach (var category in Model.Categories)
    {
        <tr>
            <td>@(Model.Categories.IndexOf(category) + 1)</td>
            <td>@(category.Name)</td>
            <td>
                <a class="btn btn-outline-secondary" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id">Redaguoti</a>
                <a class="btn btn-danger" href="@Url.Action("Delete", "Category", new { id = category.Id })" rel="modal:open"><span class="fas fa-trash" /></a>
            </td>
        </tr>
    }

</table>
